.container(ng-controller='AptListCtrl')
  .bs-docs-section
    .row
      .col-lg-12
        .page-header
          h1#forms Start a Search
    .row
      .col-lg-6
        .well
          form.bs-example.form-horizontal
            fieldset
              legend Step 1 - Location
              .form-group
                label.col-lg-2.control-label(for='inputEmail') Location
                .col-lg-10
                  input#inputEmail.form-control(type='text', placeholder='City, zip, etc')
                  span.help-block
                    | A longer block of help text that breaks onto a new line and may extend beyond one line.
              .form-group
                .col-lg-10.col-lg-offset-2
                  button.btn.btn-default Cancel
                  button.btn.btn-primary(type='submit') Submit
  .row(ng-repeat='apt in apartments')
    h2 {{ apt.address }}
